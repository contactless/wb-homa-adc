[Unit]
Description=MQTT Driver for ADC
Wants=wb-hwconf-manager.service wb-modules.service
After=network.target wb-hwconf-manager.service wb-modules.service

[Service]
Type=simple
Restart=always
RestartSec=1
User=root
ExecStart=/usr/bin/wb-homa-adc
ExecStartPre=/usr/lib/wb-homa-adc/generate-system-config.sh

[Install]
WantedBy=multi-user.target